<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".image_2"
    android:orientation="vertical"
    android:background="@drawable/img3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="Inside Bhutan"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imagephob"
            android:layout_width="338dp"
            android:layout_height="166dp"
            android:layout_marginTop="78dp"
            app:layout_constraintEnd_toEndOf="@+id/imagephob"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="@+id/imagephob"
            tools:ignore = "MissingConstraints"
            tools:layout_editor_absoluteY ="160dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/phobjakha" />

        <TextView
            android:id="@+id/text_phobja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Phobjakha"
            android:textSize="20dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_pho"
            android:layout_width="315dp"
            android:layout_height="302dp"
            android:layout_marginTop="10dp"
            android:text="@string/phobjakha_valley"
            android:textSize="14dp"
            android:lineHeight="20dp"
            android:layout_gravity="center"
            android:paddingLeft="40dp"/>

    </LinearLayout>

</LinearLayout>